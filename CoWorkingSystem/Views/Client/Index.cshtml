@model List<ClientModel>;
@{
    ViewData["Title"] = "Client Page";
}

<div class="text-center">
    <h1 class="display-4">Bem vindo!</h1>
    <a role="button" class="btn btn-primary" asp-controller="Client" asp-action="AddClient">Novo agendamento</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Data de criação</th>
                <th scope="col"></th>
            </tr>
        </thead>
        @if(Model != null && Model.Any())
        {
            @foreach(ClientModel item in Model)
            {
                <tbody>
                    <tr>
                        <th>@item.Name</th>
                        <td>@item.CreatDate</td>
                        <td>
                            <a role="button" class="btn btn-primary"
                               asp-controller="Client" asp-action="ClientUpdate" asp-route-id="@item.Id">Editar</a>
                            <a role="button" class="btn btn-secondary"
                               asp-controller="Client" asp-action="RemoveConfirm" asp-route-id="@item.Id">Apagar</a>
                        </td>
                    </tr>
                </tbody>
            }
        }
    </table>
</div>
